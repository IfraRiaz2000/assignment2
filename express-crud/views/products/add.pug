extends ../layout

block content 
    h1 Add New Product

    form(action="/products/add", method="post")
        .form-group 
            label(for="No") Product No
            input#name(type="number", class="form-control", name="No")
        .form-group 
            label(for="name") Product Name 
            input#name(type="text", class="form-control", name="name")
        .form-group 
            label(for="price") Product Details
            input#name(type="text", class="form-control", name="details")

        input(type="submit", class="btn btn-info")
              